{
    "name": "video-chat-app",
    "version": "2.0.0",
    "description": "Secure Video Chat Application with End-to-End Encryption",
    "main": "backend/server.js",
    "scripts": {
        "start": "NODE_ENV=production node backend/server.js",
        "build": "cd frontend && npm install && npm run build && cd ..",
        "postinstall": "npm run build",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm start",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "test": "cd backend && npm test && cd ../frontend && npm test",
        "lint": "cd backend && npm run lint && cd ../frontend && npm run lint"
    },
    "keywords": [
        "video-chat",
        "webrtc",
        "socket.io",
        "encryption",
        "secure",
        "react",
        "fullstack"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "peer": "^1.0.2",
        "socket.io": "^4.7.4",
        "uuid": "^9.0.1",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@mui/icons-material": "^5.15.0",
        "@mui/material": "^5.15.0",
        "axios": "^1.6.2",
